{% extends 'base_header_footer.html.twig' %}

{% block title %}ChemicalBrothers{% endblock %}

{% block content %}
    <div class="container">
        <h3 class="text-primary table-title-text">Liste de produits : </h3>
        {% for product in products %}
            <div class="product-span row">
                <span class="col">{{ product.name }}</span>
                <span class="col text-end">
                    {% for fds in product.fds %}
                        <a href="{{ fds.path }}" download="{{ product.name|replace({' ': ''}) }}.pdf">
                            <img src="images/plusicon.png" class="plus-icon"/>
                        </a>
                    {% endfor %}
                </span>
            </div>
            <hr class="products-line">
            <div class="product-description row">
                {{ product.description }}
            </div>
            
        {% endfor %}
    </div>
{% endblock %}
