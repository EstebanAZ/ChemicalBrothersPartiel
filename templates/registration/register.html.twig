{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<body class="d-flex align-items-center justify-content-center login-background-image">
    <main class="form-signin w-10 m-auto p-5 card">
        <div>
            <img src="images\logo.png" class="logo-image-login">
            <h1 class="text-center mb-4">Inscription</h1>

            {{ form_errors(registrationForm, {
                label: 'Une erreur est survenue :',
                attr: {
                    class: 'alert alert-danger'
                }
            }) }}

            {{ form_start(registrationForm) }}

            <div class="form-floating mb-3">
                {{ form_widget(registrationForm.username, {
                    attr: {
                        class: 'form-control',
                        placeholder: 'Nom d\'utilisateur',
                        autofocus: true
                    }
                }) }}
                <label for="floatingInput">Nom d'utilisateur</label>
            </div>
            <div class="form-floating mb-3">
                {{ form_widget(registrationForm.email, {
                    attr: {
                        class: 'form-control',
                        placeholder: 'Adresse email'
                    }
                }) }}
                <label for="floatingInput">Adresse email</label>
            </div>
            <div class="form-floating mb-3">
                {{ form_widget(registrationForm.plainPassword, {
                    attr: {
                        class: 'form-control',
                        placeholder: 'Mot de passe'
                    }
                }) }}
                <label for="floatingInput">Mot de passe</label>
            </div>

                {{ form_row(registrationForm.agreeTerms, {
                    label: 'Accepter les conditions générales d\'utilisation',
                    attr: {
                        class: 'form-check-input ms-2 me-4 mb-3'
                    }
                }) }}

                <button type="submit" class="btn btn-primary w-100">S'inscrire</button>
            {{ form_end(registrationForm) }}

            <p class="mt-3 d-flex justify-content-center">Vous avez déjà un compte ?<a class="ms-2" href="{{ path('app_login') }}">Se connecter</a></p>
        </div>
    </main>
</body>
{% endblock %}
