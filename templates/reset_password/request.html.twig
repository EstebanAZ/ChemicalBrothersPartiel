{% extends 'base.html.twig' %}

{% block title %}Mot de passe oublié{% endblock %}

{% block body %}

<body class="d-flex align-items-center justify-content-center" style="background: url('https://htmlcolorcodes.com/assets/images/html-color-codes-color-tutorials-hero.jpg');">
	<main class="form-signin w-25 m-auto p-5 card">
        {% for flash_error in app.flashes('reset_password_error') %}
            <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
        {% endfor %}
        <h1 class="mb-4">Mot de passe oublié</h1>

        {{ form_start(requestForm) }}
            {{ form_row(requestForm.email, {
                'label': 'Email',
                'attr': {
                    'placeholder': 'Entrez votre adresse mail',
                    'class': 'form-control'
                }
            }) }}
            <div class="my-3">
                <small>
                    Entrez votre adresse email, et nous vous enverrons un lien pour
                    réinitialiser votre mot de passe.
                </small>
            </div>

            <button class="btn btn-primary w-100">Envoyer le lien de réinitialisation</button>
        {{ form_end(requestForm) }}

        <div class="mt-3 text-center">
            <a href="{{ path('app_login') }}">Se connecter</a>
        </div>
    </main>
</body>
{% endblock %}
