{% extends 'base_admin.html.twig' %}

{% block title %}Administration des produits{% endblock %}

{% block body %}

<h1>Administration des produits</h1>

<a href="{{ path('app_admin_product_add') }}" class="btn btn-success">Ajouter un produit</a>

<table class="table table-striped my-3">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for product in products %}
            <tr>
                <td>{{ product.id }}</td>
                <td>{{ product.name }}</td>
                <td>{{ product.description|length > 50 ? product.description|slice(0, 50) ~ '...' : product.description  }}</td>
                <td>
                    <a href="{{ path('app_admin_product_edit', {'id': product.id}) }}" class="btn btn-primary"><i class="fa-regular fa-pen-to-square"></i></a>
                    <a onclick="return confirm('Voulez vous vraiment supprimer ce produit ?')"  href="{{ path('app_admin_product_delete', {'id': product.id}) }}" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        {% endfor %}
    </tbody>

{% endblock %}
